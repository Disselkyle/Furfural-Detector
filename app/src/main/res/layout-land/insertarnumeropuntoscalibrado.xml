<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InsertarNumeroPuntosCalibrado" >
    
    <TextView
        android:id="@+id/barraseparadora"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/barranaranja"/>	
	
	 <TextView
	    android:id="@+id/tituloInicio"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginBottom="10dp"
	   	android:layout_marginLeft="55dp"
	    android:layout_marginRight="55dp"
	    android:layout_marginTop="20dp"
	    android:background="@color/barratitulo"
	    android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/tituloCalibrate"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textoNumeroPuntos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/textoNumeroPuntos"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editNumeroPuntos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="16sp" 
            android:inputType="number">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/botonStart3"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="@string/botonStart"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
