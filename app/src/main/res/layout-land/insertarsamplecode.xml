<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="TextFields"
    tools:context=".InsertarSampleCode" >

    <TextView
        android:id="@+id/barraseparadora"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/barranaranja"/>	
	
	 <TextView
	    android:id="@+id/tituloInicio"
	    android:layout_width="fill_parent"
	    android:layout_height="30dp"
	    android:layout_marginBottom="10dp"
	    android:layout_marginLeft="55dp"
	    android:layout_marginRight="55dp"
	    android:layout_marginTop="20dp"
	    android:background="@color/barratitulo"
	    android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/tituloStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textoSampleCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/textoSampleCode"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editSampleCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textoUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/textoMeasureUser"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="16sp" />

        <Button
            android:id="@+id/botonStart2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="@string/botonStart"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>